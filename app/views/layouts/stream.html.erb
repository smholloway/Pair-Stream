<!DOCTYPE html>
<html>
<head>
  <title>PairSTREAM</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>

<body>
  <div id="site">
    <%= render 'shared/header' %>
    <div style="clear:both"></div>

    <div id="main">
      <%= render 'shared/leftcolumn' %>

      <div id="middle">
        <div id="feeds">
          <ul>
            <li><%= link_to 'Stream', '' %></li>
            <li><%= link_to 'Bookmarks', '' %></li>
            <li><%= link_to 'Calendar', '' %></li>
            <li><%= link_to 'Todos', '' %></li>
          </ul>
        </div>
        <div id="content">
          <%= yield %>
        </div>
      </div>

      <%= render 'shared/rightcolumn' %>
      <div style="clear:both"></div>
    </div> <!-- #main -->

    <%= render 'shared/footer' %>
  </div> <!-- #site -->
</body>
</html>
